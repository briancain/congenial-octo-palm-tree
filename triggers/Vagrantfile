# -*- mode: ruby -*-
# vi: set ft=ruby :

# All Vagrant configuration is done below. The "2" in Vagrant.configure
# configures the configuration version (we support older styles for
# backwards compatibility). Please don't change it unless you know what
# you're doing.
Vagrant.configure("2") do |config|
  config.ssh.shell = {"hello"=>"there"}

  config.vm.box = "bento/ubuntu-16.04"

  config.trigger.before :up, :halt, :destroy,
    name: "Greetings", info: "hello", run: {inline: "echo 'hi'"}

  config.trigger.before :whatup,
    run: {:inline=>"echo 'hi'"}

  config.trigger.before :up, :destroy do |trigger|
    trigger.info = "hello"
    trigger.name = "Greetings"
    trigger.run = {inline: "echo 'hi'",
                   shell: "/bin/bash"}
    trigger.ignore = "bork"
  end

  config.trigger.after :halt do |trigger|
    trigger.run = {file: "~/vagrant.sh"}
  end

  config.vm.define "mymachine" do |m|
  end
end
